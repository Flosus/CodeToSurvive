<!--
    An action a character can do. This can be an interactive map element or
    an item in the players inventory.
-->
<Action xmlns="https://aheffner.de/Schema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://aheffner.de/Schema https://aheffner.de/Schema/CodeToSurvive.xsd">
    <!-- The internal id of the action -->
    <ActionId>doingSomething</ActionId>
    <!-- The description of the action, visible to the player -->
    <Description>This is an action you can do.</Description>
    <!-- The name of the action, done by the player -->
    <ActionName>PullLever</ActionName>
    <!-- The function name for overwriting the default action handler -->
    <ActionHandler>DoSomethingHandler</ActionHandler>
    <!-- The function name for checking if a character is even able to do this action -->
    <CheckHandler>CanPlayerDoSomethingCheck</CheckHandler>
    <!-- Optional parameters for the handler -->
    <HandlerParameter>
        <test>Abc</test>
    </HandlerParameter>
</Action>